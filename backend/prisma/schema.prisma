generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Gameroom {
  id           String @id @default(auto()) @map("_id") @db.ObjectId
  users        User[]
  currentRound Int?
}

model User {
  id            String    @id @map("_id")
  username      String
  roomId        String?   @db.ObjectId
  virusClicked  Int?
  averageTime   Int[]
  score         Int?
  room          Gameroom? @relation(fields: [roomId], references: [id])
  playedgamesId String?   @db.ObjectId
  higscoresId   String?   @db.ObjectId
}

model Highscore {
  id                  String @id @default(auto()) @map("_id") @db.ObjectId
  username            String
  averageTimeFromUser Int
}

model PlayedGames {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  createdAt    DateTime?
  userOne      String
  userTwo      String
  userOneScore Int?
  userTwoScore Int?
}

